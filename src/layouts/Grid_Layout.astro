---
import Profile from '../components/buttons/profile.astro';
import Servers from '../components/buttons/servers.astro';
import Twitter from '../components/buttons/twitter.astro';
import Twitch from '../components/buttons/twitch.astro';
import Instagram from '../components/buttons/instagram.astro';
import Gitlab from '../components/buttons/Gitlab.astro';
import Discord from '../components/buttons/discord.astro';
import Github from '../components/buttons/github.astro';
---

<header class='net_grid p-10 h-full'>
	<Profile />
	<Servers />
	<Twitter />
	<Twitch />
	<Github />
	<Instagram />
	<Gitlab />
	<Discord />
</header>

<style>
	.net_grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: repeat(3, 1fr);
		gap: 1em;
	}

	@media screen (min-width: 320px) and (max-width: 425px) {
		.net_grid {
			grid-template-columns: 1fr;
			grid-template-rows: repeat(8, 1fr);
		}
	}
</style>
