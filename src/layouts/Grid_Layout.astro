---
import Profile from '../components/buttons/profile.astro';
import Servers from '../components/buttons/servers.astro';
import Twitter from '../components/buttons/twitter.astro';
import Twitch from '../components/buttons/twitch.astro';
import Instagram from '../components/buttons/instagram.astro';
import Gitlab from '../components/buttons/Gitlab.astro';
import Discord from '../components/buttons/discord.astro';
import Github from '../components/buttons/github.astro';
---

<div class='container rounded-[20px]'>
	<Profile />
	<Servers />
	<Twitter />
	<Twitch />
	<Instagram />
	<Gitlab />
	<Discord />
	<Github />
</div>

<style>
	.container {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr 1fr;
		grid-template-rows: 1fr 1fr 1fr;
		gap: 10px 10px;
		padding: 10px;
		border: 5px solid #5d5d5d;
		grid-auto-flow: row;
		grid-template-areas:
			'profile Servers Servers discord'
			'profile twitter twitch Github'
			'profile instagram gitlab Github';
		width: 1400px;
		height: 800px;
		/* backdrop-filter: blur(50px); */
		overflow: hidden;
		z-index: 1;
		box-shadow:
			0px 17.1px 7.5px rgba(0, 0, 0, 0.051),
			0px 30.2px 16.1px rgba(0, 0, 0, 0.063),
			0px 40.1px 27.1px rgba(0, 0, 0, 0.07),
			0px 47.9px 43.7px rgba(0, 0, 0, 0.076),
			0px 58.5px 75.1px rgba(0, 0, 0, 0.085),
			0px 100px 173px rgba(0, 0, 0, 0.11);
	}

	@media (max-width: 425px) {
		.container {
			width: 100%;
			border: none;
			grid-template-columns: 1fr;
			grid-template-rows: 1fr;
			grid-auto-flow: column;
			grid-template-areas:
				'profile'
				'Servers'
				'twitter'
				'twitch'
				'instagram'
				'gitlab'
				'Github';
			gap: 10px 10px;
		}
	}
</style>
